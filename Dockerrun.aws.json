{
  "AWSEBDockerrunVersion":2,
  "containerDefinitions":[
    {
      "name":"client",
      "image":"vzaicevs/multi-client",
      "hostname":"client",
      "essential":false
    },
    {
      "name":"server",
      "image":"vzaicevs/multi-server",
      "hostname":"api",
      "essential":false
    },
    {
      "name":"worker",
      "image":"vzaicevs/multi-worker",
      "hostname":"worker",
      "essential":false
    },
    {
      "name":"nginx",
      "image":"vzaicevs/multi-nginx",
      "essential":true,
      "portMappings":[
        {
          "hostPort":80,
          "containerPort":80
        }
      ],
      "links":[
        "client",
        "server"
      ]
    }
  ]
}
